{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["./modules/*"],
      "@shared/*": ["./shared/*"],
      "@config/*": ["./config/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
